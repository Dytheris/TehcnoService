<Window x:Class="TehcnoService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TehcnoService"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1680" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Requests">
                    <MenuItem Header="View All" Click="OpenRequestsPage"/>
                    <MenuItem Header="Add New" Click="OpenAddRequestPage"/>
                </MenuItem>
                <MenuItem Header="Add user" Click="OpenAddUserPage"/>
                <MenuItem Header="Add executor" Click="OpenAddExecutorPage"/>
                <MenuItem Header="Statistics" Click="OpenStatisticsPage"/>
            </Menu>
            <Frame x:Name="MainFrame" />
        </DockPanel>
    </Grid>
</Window>
