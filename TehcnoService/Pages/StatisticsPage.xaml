<Page x:Class="TehcnoService.Pages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TehcnoService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatisticsPage">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Service Statistics" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="CompletedRequests" Margin="0,5"/>
            <TextBlock x:Name="AverageCompletionTime" Margin="0,5"/>
            <TextBlock x:Name="FaultTypesStats" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Page>