<Page x:Class="TehcnoService.Pages.AssignExecutorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TehcnoService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AssignExecutorPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Margin="20">

            <!-- Выбор исполнителя -->
            <TextBlock Text="Select Executor:" Margin="0,10,0,5"/>
            <ComboBox x:Name="ExecutorComboBox" Width="300"/>

            <!-- Кнопка для назначения исполнителя -->
            <Button Content="Assign Executor" Width="300" Height="40" Margin="0,20,0,0" Click="AssignExecutor_Click"/>
        </StackPanel>
    </Grid>
</Page>